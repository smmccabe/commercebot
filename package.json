{
  "name": "commercebot",
  "version": "0.0.2",
  "description": "A bot to pretend to be a simple customer",
  "main": "commercebot.js",
  "author": "Shawn McCabe",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.2.0",
    "minimist": "^1.2.0",
    "mocha": "^5.2.0",
    "nexe": "^3.3.2",
    "selenium-webdriver": "^4.0.0-alpha.1"
  },
  "scripts": {
    "test": "yarn mocha",
    "dev": "node commercebot.js",
    "build": "yarn nexe commercebot.js --output ./bin/commercebot",
    "build-windows": "yarn nexe commercebot.js --output ./bin/commercebot-win --target win32-x64 --build",
    "build-mac": "yarn nexe commercebot.js --output ./bin/commercebot-macos --target darwin-x64 --build",
    "build-linux": "yarn nexe commercebot.js --output ./bin/commercebot-linux --target linux-x64 --build",
    "package": "yarn build-windows && yarn build-mac && yarn build-linux",
    "lint": "yarn eslint ."
  },
  "bin": {
    "commercebot": "./commercebot.js"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2"
  }
}
